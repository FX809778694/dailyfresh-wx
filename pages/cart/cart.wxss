checkbox{
  transform: scale(.8)
}
/* 未登录 */

.no-login {
  padding-top: 200rpx;
}

.no-login image {
  width: 258rpx;
  height: 258rpx;
}

/* 购物车没有商品 */

.no-cart {
  padding-top: 200rpx;
}

.no-cart image {
  width: 258rpx;
  height: 258rpx;
}

/* 购物车商品列表 */

.cartMain {
  padding-bottom: 220rpx;
}

.cartGoods .goodsItem {
  position: relative;
  width: calc(100% - 75rpx);
}

.cartGoods .goodsItem image {
  width: 160rpx;
  height: 160rpx;
}

.cartGoods .goodsItem .goodsInfo {
  width: calc(100% - 180rpx);
}

.cartGoods .goodsItem .goodsInfo .name {
  height: 100rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.cartGoods .goodsItem .goodsInfo .price {
  height: 60rpx;
  line-height: 60rpx;
}

.cartGoods .addRemoveNum {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  width: 150rpx;
}

/* 猜你喜欢 */

.recommend {
  padding-bottom: 220rpx;
}

.recommend .item {
  width: calc(100%/2 - 20rpx);
  margin-left: 10rpx;
  margin-right: 10rpx;
  position: relative;
}

.recommend .item image {
  width: 100%;
  height: calc(100vw/2 - 70rpx);
}

.recommend .item .name {
  height: 80rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.recommend .addBtn {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}

/* 优惠提示 */

.cartTip {
  position: fixed;
  bottom: 120rpx;
  left: 0;
  height: 80rpx;
  width: 100%;
  z-index: 99999;
}

/* 底部结算信息 */

.cartBottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  z-index: 1000;
}
.like-add-btn{
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
}

.skill-shop-tips{
  width: 88%;
  margin-left: 12%;
  margin-top: 10rpx;
  font-size: 24rpx;
  background: #F5F5F5;
  color: #999999;
  padding: 10rpx 0;
  padding-left: 10rpx;
  margin-bottom: 40rpx;
  border-radius: 4rpx;
  position: relative;
}
.skill-tips-title{
  background: #D7F0DA;
  color: #3AB44B;
  padding: 6rpx;
  border-radius: 4rpx;
}
.skill-tips-arrow{
  position: absolute;
  top: -6px;
  left: 20px;
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-bottom: 6px solid #F5F5F5;
  display: inline-block;
}
