.container {
  padding-bottom: 120rpx;
}

.goodsName {
  width: calc(100% - 250rpx);
}

/* 评分 */

.star image {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

/* 添加图片按钮 */

.imageBox {
  width: calc(100% / 3 - 20rpx);
  height: calc(100vw / 3 - 50rpx);
  margin-right: 20rpx;
}

.imageBox image {
  max-width: 100%;
  max-height: 100%;
}

/* 底部按钮 */

.btns {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 2;
}

.btns .btn{
  width: 50%;
  height: 100%
}
