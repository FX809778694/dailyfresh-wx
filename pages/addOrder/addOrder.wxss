.goods {
  margin-bottom: 120rpx;
}

.goodsItem {
  width: calc(50% - 20rpx);
  position: relative;
}

.goodsItem image {
  width: 100%;
  height: calc(100vw / 2 - 70rpx);
}

.goodsItem .name {
  height: 100rpx;
  line-height: 40rpx;
  overflow: hidden;
}

/* 添加到购物车 */

.addToCart {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  width: 150rpx;
}

/* 底部结算信息 */

.cartBottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 2;
}
