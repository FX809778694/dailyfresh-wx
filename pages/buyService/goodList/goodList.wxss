
.main-wrap{
  padding-top: 90rpx;
  padding-bottom: 60rpx;
}

.order-tabs{
  width: 100%;
  height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.tabs-item{
  width: 50%;
  height: 100%;
  text-align: center;
}
.tabs-item-p{
  display: inline-block;
  line-height: 86rpx;
  font-size: 30rpx;
  color: #2C2C2C;
  font-weight: 400;
}

.tabs-active{
  border-bottom: 4rpx solid #3AB44B;
}

.list-item{
  width: 690rpx;
  background: #fff;
  margin: 0 auto;
  margin-top: 20rpx;
  border-radius: 8rpx;
  padding: 25rpx 20rpx;
  padding-bottom: 0;
  overflow: hidden;
  position: relative;
}

.item-apply-top{
  height: 160rpx;
  line-height: 160rpx;
  border-bottom: 1rpx solid #ECECEC;
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.item-top{
  height: 160rpx;
  line-height: 160rpx;
  border-bottom: 1rpx solid #ECECEC;
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.item-shop-img{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}
.item-content{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}
.content-l{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.content-l text{
  width: 100%;
  line-height: 1;
}
.l-name{
  color: #333333;
  font-size: 30rpx;
  font-weight: 400;
  margin-top: 40rpx;
}
.l-num{
  color: #999999;
  font-size: 24rpx;
  font-weight: 400;
  margin-top: 20rpx;
}

.content-r{
  font-size: 30rpx;
  color: #333333;
  font-weight: 400;
}

.item-btn{
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
}
.item-btn text{
  display: inline-block;
  width: 140rpx;
  height: 50rpx;
  line-height: 54rpx;
  border: 1rpx solid #E5E5E5;
  text-align: center;
  color: #333333;
  font-size: 24rpx;
  font-weight: 400;
  border-radius: 8rpx;
}
.apply-record-item{

}
.apply-record-top{
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  font-weight: 400;
  line-height: 42rpx;
  border-bottom: 1rpx solid #ECECEC;
}
.apply-bottom{
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  margin-top: 20rpx;
}
.order-time{
  color: #999999;
  font-size: 24rpx;
}
.cancel-btn{
  width: 150rpx;
  height: 50rpx;
  border: 1rpx solid #D9D9D9;
  border-radius: 8rpx;
  color: #333333;
  font-size: 24rpx;
  font-weight: 400;
  text-align: center;
  line-height: 50rpx;
}







