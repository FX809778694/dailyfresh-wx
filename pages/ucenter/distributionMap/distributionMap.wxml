<view class="main-wrap">

  <map
    id="map"
    style="width:100%;height:100%;"
    bindtap="enterDistribution"
    longitude="{{longitudeDeliver}}"
    latitude="{{latitudeDeliver}}"
    markers="{{markers}}"
    scale='{{scale}}'>
  </map>

</view>

<view class="distributor-info">
  <view class="distributor-circle">
    <text class="iconfont iconswticonkuaidi1"></text>
  </view>
  <view class="item-content">
    <view>距您还有<text style="font-size: 36rpx; color: #3AB44B;font-weight: 600;padding: 0 4rpx;">{{distance}}</text>公里</view>
    <view>配送员：{{deliveryInfo.userName}}</view>
    <view>联系电话：{{deliveryInfo.account}}</view>
  </view>
  <view class="iconfont icondianhua" bindtap="callPhone"></view>
</view>
