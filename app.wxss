/* 空数据 */

.empty-data {
  padding-top: 200rpx;
  width: 100vw;
  height: 100vh;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.empty-data image {
  width: calc(100vw / 2.5);
  height: calc(100vw / 2.5);
  margin: auto;
  display: block;
}

.empty-data text {
  margin-top: 20rpx;
  color: #8799a3;
}

.nodata {
  text-align: center;
  padding: 10rpx;
  color: #D4D4D4;
  background: #f6f6f6;
}

.iconjian, .iconjia{
  font-size: 40rpx;
  color: #3AB44B;
}


.coupon-list-item{
  background: #fff;
  border-radius: 4rpx;
  box-shadow: 0 0 2rpx 0 rgba(0,0,0,0.1);
  margin: 30rpx;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  min-height: 180rpx;
  position: relative;
}
.coupon-list-item:first-child{
  margin-top: 0;
}
.coupon-item-l{
  width: 220rpx;
  height: 220rpx;
  position: relative;
  background: #F6F6F6;
}
.coupon-img{
  display: inline-block;
  width: 100%;
  height: 100%;
}
.coupon-item-l-con{
  width: 220rpx;
  height: 220rpx;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex-wrap: wrap;
}
.l-price{
  font-size: 60rpx;
  line-height: 60rpx;
  height: 60rpx;
  color: #FFFFFF;
}
.l-price text{
  font-size: 24rpx;
}
.l-tip{
  font-size: 24rpx;
  color: #FFFFFF;
}

.coupon-item-r{
  width: 480rpx;
  padding: 20rpx;
}
.item-r-title{
  display: flex;
  justify-content: flex-start;
}
.r-coupon-quantity{
  height: 40rpx;
  padding: 0 10rpx;
  line-height: 40rpx;
  background: #41D27B;
  border-radius: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #FFFFFF;
}
.item-r-title text{
  font-size: 30rpx;
  color: #333333;
  margin-left: 20rpx;
  height: 84rpx;
  width: 72%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.use-time{
  font-size: 24rpx;
  color: #333333;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.item-r-b{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1rpx solid #E8E8E8;
  border-top-style: dashed;
  height: 50rpx;
}
.coupon-tip{
  color: #333333;
  font-size: 24rpx;
  padding-top: 16rpx;
}
.use-btn{
  width: 180rpx;
  height: 40rpx;
  text-align: center;
  line-height: 38rpx;
  border-radius: 20rpx;
  border: 1rpx solid #6190DE;
  padding: 0 20rpx;
  margin-top: 16rpx;
}

.unable-use-img{
  display: inline-block;
  position: absolute;
  right: -6rpx;
  top: 10rpx;
  width: 78rpx;
  height: 77rpx;
}
.unable-time-img{
  display: inline-block;
  position: absolute;
  right: -6rpx;
  top: 10rpx;
  width: 78rpx;
  height: 77rpx;
}

.no-coupon-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  flex-wrap: wrap;
  padding-top: 100rpx;
}
.no-coupon-wrap-img{
  display: inline-block;
  width: 264rpx;
  height: 235rpx;
}
.no-coupon-wrap-p{
  color: #999999;
  font-size: 30rpx;
  margin-top: 30rpx;
}

